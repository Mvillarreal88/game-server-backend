{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(python:*)",
      "Bash(source:*)",
      "Bash(pip install:*)",
      "Bash(test:*)",
      "Bash(az account:*)",
      "Bash(az aks get-credentials:*)",
      "Bash(az login:*)",
      "Bash(az logout:*)",
      "Bash(kubectl config:*)",
      "Bash(ls:*)",
      "Bash(pkill:*)",
      "Bash(cat:*)",
      "Bash(claude auth status)",
      "Bash(env)",
      "Bash(grep:*)",
      "Bash(unzip:*)",
      "Bash(pytest:*)",
      "Bash(echo:*)",
      "Bash(az ad signed-in-user show:*)",
      "Bash(az role assignment create:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git config:*)",
      "Bash(git push:*)"
    ],
    "deny": [],
    "defaultMode": "acceptEdits"
  }
}