# Game Server Backend - Environment Variables Example
# Copy this file to .env and fill in the values

# Environment
ENVIRONMENT=development  # development, staging, production
PORT=5000

# Azure Core
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP_NAME=GameServerRG
AZURE_CLIENT_ID=your-client-id
AZURE_TENANT_ID=your-tenant-id

# Azure Container Registry
ACR_USERNAME=gameregistry
ACR_PASSWORD=your-acr-password
ACR_LOGIN_SERVER=gameregistry.azurecr.io

# Azure Storage
STORAGE_ACCOUNT_NAME=gameserversa
STORAGE_ACCOUNT_KEY=your-storage-account-key
STORAGE_SHARE_NAME=game-server-data

# Database
DB_HOST=game-server-db.postgres.database.azure.com
DB_NAME=gameserverdb
DB_USERNAME=gameadmin
DB_PASSWORD=your-db-password

# Kubernetes
KUBECONFIG=/path/to/your/kubeconfig
KUBECONFIG_CONTENT=base64-encoded-kubeconfig-content

# AKS Cluster (Production)
AKS_CLUSTER_URL=https://gameserverclusterprod-dns-o0owfoer.hcp.eastus.azmk8s.io
AKS_SERVER_ID=your-server-id
AKS_CLUSTER_CA_CERT=base64-encoded-ca-cert

# Backblaze B2 Storage
B2_KEY_ID=your-b2-key-id
B2_APP_KEY=your-b2-app-key
B2_BUCKET_NAME=game-servers

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL 